<Window x:Class="rpg_character_creator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rpg_character_creator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Center" TextWrapping="Wrap" Text="RPG Character Creator" VerticalAlignment="Top" FontSize="48px"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Text="Treat Selector" FontSize="22px"/>
        <ComboBox Name="Treats" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
        <Button Grid.Row="1" HorizontalAlignment="Right" Content="Add" VerticalAlignment="Bottom" Width="100" />

        <TextBlock Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Text="Skill Selector" FontSize="22px"/>
        <ComboBox Name="Skills" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Content="Add" VerticalAlignment="Bottom" Width="100" />

        <TextBlock Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" Text="Race Selector" FontSize="22px"/>
        <ComboBox Name="Races" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120"/>
        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Content="Add" VerticalAlignment="Bottom" Width="100" />

        <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" Text="Character history" FontSize="22px"/>
        <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Content="Add" VerticalAlignment="Bottom" Width="100" />

    </Grid>
</Window>
